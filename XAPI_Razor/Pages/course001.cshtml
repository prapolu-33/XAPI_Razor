        </li>
        <li>
            <label for="option3">Option 3</label>
            <input type="radio" id="option3" name="options" value="Option 3">
            <button onclick="sendStatement(" answered","http: //adlnet.gov/expapi/verbs/answered","Option 3","https: //example.com/option-3")">Select</button>
        </li>
        <li>
            <label for="option4">Option 4</label>
            <input type="radio" id="option4" name="options" value="Option 4">
            <button onclick="sendStatement(" answered","http: //adlnet.gov/expapi/verbs/answered","Option 4","https: //example.com/option-4")">Select</button>
        </li>
    </ul>

    <p id="selectedOption"></p>

    <script>function showOption(option) {
            document.getElementById("selectedOption").textContent = "You selected: " + option;
        }</script>
    <script type="text/javascript" src="xapiwrapper.min.js"></script>

</body>
</html>


